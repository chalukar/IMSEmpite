@page
@model IMSEmpite.Pages.Users.IndexModel
@{
    Layout = "~/Shared/_Layout.cshtml";
}


<form>
    <br /><br />
    <div class="row">
        <div class="col-6">
            <h2 class="text-info"> User List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-page="/Account/Register" asp-area="Identity" class="btn btn-info">
                <i class="fas fa-plus"></i> &nbsp; Create New User
            </a>
        </div>
    </div>

    <div class="border backgroundwhite">
        <table class="table table-striped border" id="dtaTable">
            <tr class="table-secondary">
                <th>
                    @Html.DisplayNameFor(m => m.ApplicationUserList[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.ApplicationUserList[0].Email)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.ApplicationUserList[0].Address)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.ApplicationUserList[0].City)
                </th>
                <th>Action</th>
            </tr>
            @foreach (var item in Model.ApplicationUserList)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(m => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.City)
                    </td>
                    <td style="width:150px">
                        <div class="btn-group" role="group">
                            <a class="btn btn-primary text-white" asp-page="Edit" asp-route-Id="@item.Id">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a class="btn btn-danger text-white" asp-page="Delete" asp-route-Id="@item.Id">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </table>
    </div>
</form>
<script>

    $(document).ready(function () {
        $('#dtaTable').DataTable({
            "paging": true,
            "ordering": true,
            "info": true
        });
    });
</script>