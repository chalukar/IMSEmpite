@page
@model IMSEmpite.Pages.Inventories.CreateModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<br />
<h2 class="text-info">Create Inventory</h2>
<br />
<form method="post">
    <div class="border backgroundwhite">
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Inventory.ItemName"></label>
            </div>
            <div class="col-7">
                <input asp-for="Inventory.ItemName" class="form-control" />
            </div>
            <span asp-validation-for="Inventory.ItemName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Inventory.Qty"></label>
            </div>
            <div class="col-7">
                <input asp-for="Inventory.Qty" class="form-control" />
            </div>
            <span asp-validation-for="Inventory.Qty" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-2">
               <partial name="_CreateAndBackToButton" />
            </div>
        </div>
    </div> 
</form>
@section Scripts{ 
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}