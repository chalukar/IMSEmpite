@page
@model IMSEmpite.Pages.Inventories.DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<br />
<h2 class="text-info">Delete Inventory</h2>
<br />
<form method="post">
    <div class="border backgroundwhite">
        <input type="hidden" asp-for="Inventory.Id" />
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Inventory.ItemName"></label>
            </div>
            <div class="col-7">
                <input asp-for="Inventory.ItemName" disabled class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Inventory.Qty"></label>
            </div>
            <div class="col-7">
                <input asp-for="Inventory.Qty" disabled class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-2">
                <partial name="_DeleteAndBackToButton" />
            </div>
        </div>
    </div>
</form>

